datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-py"
}

enum AttentionStatus {
  FOCUSED
  UNFOCUSED
  NO_FACE_DETECTED
}

model AttentionSchema {
  studentId       String
  lectureId       String
  timestamp       DateTime
  attentionStatus AttentionStatus
  confidence      Float

  @@id([studentId, lectureId, timestamp])
}